  <gap:splash src="splash/ios/iPad-1536x2048.png" gap:platform="ios" width="1536" height="2048" />
  <gap:splash src="splash/ios/iPad-1024x768.png" gap:platform="ios" width="1024" height="768" />
  <gap:splash src="splash/ios/iPad-768x1024.png" gap:platform="ios" width="768" height="1024" />

</widget>